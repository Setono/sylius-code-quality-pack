{
    "name": "setono/sylius-code-quality-pack",
    "description": "A pack that installs code quality tools aimed at Sylius projects and plugins",
    "license": "MIT",
    "type": "library",
    "require": {
        "php": ">=8.1",
        "ergebnis/composer-normalize": "^2.47",
        "infection/infection": "~0.27.11 || ~0.28.1 || ~0.29.14",
        "phpunit/phpunit": "^9.6.23 || ^10.5.46",
        "psalm/plugin-phpunit": "~0.19.5",
        "rector/rector": "^1.2.10",
        "shipmonk/composer-dependency-analyser": "^1.8.3",
        "sylius-labs/coding-standard": "^4.4",
        "vimeo/psalm": "^5.26.1 || ^6.10.3"
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": false,
            "ergebnis/composer-normalize": true,
            "infection/extension-installer": true
        },
        "sort-packages": true
    }
}
